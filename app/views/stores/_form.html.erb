<div class="col-sm-8 col-sm-offset-2">
  <%= form_for(@store) do |f| %>
    <% if @store.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

        <ul>
        <% @store.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
     <div class="form-group">
      <%= f.label :name %><br>
